{
	"manifest_version": 2,
	"name": "Host switcher",
	"version": "1.0",
	"icons": {
		"16": "icon.png"
	},
	"permissions": [
		"cookies",
		"<all_urls>",
		"http://translate.yandex.net/*",
		"tabs"
	],
	"browser_action": {
		"default_title": "Host switcher",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["popup.js"],
		"persistent" : true
	}
}
